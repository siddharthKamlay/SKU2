#if($packageAsPortlet==true)
<%@page session="false" contentType="text/html" pageEncoding="UTF-8" import="java.util.*,javax.portlet.*,com.hcl.mx.base.*" %>
<%@taglib uri="http://java.sun.com/portlet_2_0" prefix="portlet"%>
<%@taglib uri="http://www.ibm.com/xmlns/prod/websphere/portal/v8.0/portlet-client-model" prefix="portlet-client-model" %>        
<portlet:defineObjects />
<portlet-client-model:init>
    <portlet-client-model:require module="ibm.portal.xml.*" />
    <portlet-client-model:require module="ibm.portal.portlet.*" />
</portlet-client-model:init>

<div id="tx-root">
    <voltmx-head>
        <script>
            window.txBaseURL = '${pageContext.request.contextPath}';
        </script>
        <style type="text/css">
            [hidden] {
                display: none !important;
            }
            div[kr="app_blocker"]{
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                position: absolute;
                left: 0px;
                top: 0px;
                width: 100%;
                height: 100%;
                max-width: 100%;
                max-height: 100%;
                overflow-x: hidden;
                overflow-y: hidden;
            }
            div[kr='app_forms'] {
                position: relative;
                left: 0px;
                right: 0px;
                top: 0px;
                bottom: 0px;
                overflow-x: hidden;

                overflow-y: hidden;
                width: 100%;
                height: 100%;
            }
            voltmx-body {
                height: 700px;
            }
            #tx-root {
                height: 700px;
            }
            div[kr='app_dialogs'] {
                position: absolute;
                left: 0px;
                top: 0px;
            }
            div[kr='viewport'] {
                overflow: auto !important;
            }
            div[kr='app_scrap'] {
                position: absolute;
                left: -999999999px;
                top: -999999999px;
                width: 1px;
                height: 1px;
                max-width: 1px;
                max-height: 1px;
                opacity: 0;
                border: 0;
                margin-left: -1px;
                margin-top: -1px;
                clip: rect(1px, 1px, 1px, 1px);
                clip-path: inset(50%);
                -webkit-clip-path: inset(50%);
            }
            .splash {
                background: #ffffff;
            }
        </style>
    </voltmx-head>
    <voltmx-body
        style="width: 100%; margin: 0px; padding: 0px"
        aria-busy="true"
        aria-live="polite"
        aria-relevant="additions"
        aria-atomic="false"
    >
        <div id="app_splash" class="splash">
            <noscript>
                <div id="JavaScriptDisabledErrorMsg">
                    To use this site, first enable your browser's JavaScript
                    support and then refresh this page.
                </div>
            </noscript>
        </div>
    </voltmx-body>
    <script>
        let voltMXBody = document.getElementsByTagName('voltmx-body');
        let voltmxinitScript = document.createElement('script');
        voltmxinitScript.src =
            window.txBaseURL + '/desktopweb/lib/voltmxinit.js';
        voltMXBody[0].appendChild(voltmxinitScript);
    </script>
</div>
#else
#parse("tpdesktopindexheaderjsp.vm")

<!DOCTYPE html>
<html $htmlAttrs>
    <head>
        #if($jspgeneration=="true")
        <% String userAgent = request.getHeader("user-agent");
        if(userAgent != null && userAgent.toLowerCase().contains("trident")){%>
            $ieMetaTag
        <%}%>
        #end
        #parse("tpdesktopindexheadercontent.vm")
    </head>
    <body $bodyAttrs>
        #parse("tpdesktopindexbodyjsp.vm")
        #parse("tpdesktopindexbodycontent.vm")
    </body>
</html>
#end